{
  "name": "@cdcabrera/eslint-config-toolkit",
  "version": "0.5.0",
  "description": "An ESLint multipurpose config collection.",
  "author": "cdcabrera",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cdcabrera/eslint-config-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/cdcabrera/eslint-config-toolkit/issues"
  },
  "keywords": [
    "eslint",
    "eslintconfig",
    "eslint-config",
    "javascript",
    "nodejs",
    "react",
    "lint",
    "style",
    "code-quality"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "main": "index.js",
  "types": "index.d.ts",
  "exports": {
    ".": "./index.js",
    "./base": "./configs/base.js",
    "./node": "./configs/node.js",
    "./react": "./configs/react.js",
    "./json": "./configs/json.js",
    "./jest": "./configs/jest.js"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "configs/*.js"
  ],
  "scripts": {
    "release": "changelog --link-url https://github.com/cdcabrera/eslint-config-toolkit.git",
    "test": "npm run test:lint && npm run test:spell && npm run test:spell-docs && npm run test:types && npm run test:ci",
    "test:ci": "export CI=true; npm run test:jest -- --collectCoverage --coverageReporters=\"lcov\" --coverageReporters=\"json-summary\"",
    "test:clearCache": "npm run test:jest -- --clearCache",
    "test:configs": "eslint --config ./tests/eslint.config.js ./tests/__fixtures__/*.js*",
    "test:dev": "npm run test:spell && npm run test:spell-docs && npm run test:types && npm run test:jest-watch",
    "test:lint": "eslint ./configs ./tests/*.js ./index.js",
    "test:lint-watch": "nodemon --watch configs --watch tests --watch index.js --ext js,jsx --exec \"npm run test:lint\"",
    "test:jest": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:jest-update": "npm run test:jest -- -u",
    "test:jest-watch": "npm run test:jest -- --watchAll",
    "test:spell-docs": "cspell ./README.md --config ./cspell.config.json",
    "test:spell": "cspell './configs/**/*.js' './tests/**/*' --config ./cspell.config.json",
    "test:types": "tsc --noEmit --project tsconfig.json"
  },
  "dependencies": {
    "@babel/eslint-parser": "7.28.6",
    "@babel/preset-react": "7.28.5",
    "@eslint/compat": "2.0.2",
    "@eslint/js": "9.39.2",
    "@stylistic/eslint-plugin": "5.8.0",
    "eslint-plugin-comment-length": "2.2.2",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jest": "29.13.0",
    "eslint-plugin-jsdoc": "62.5.4",
    "eslint-plugin-json": "4.0.1",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-n": "17.23.2",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-unicorn": "62.0.0",
    "globals": "17.3.0"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "changelog-light": "^3.0.6",
    "cspell": "^9.6.4",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "eslint": ">=9"
  }
}
